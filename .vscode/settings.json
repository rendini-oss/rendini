{
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[gitignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[starlark]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editorconfig.generateAuto": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "settings.json": "extensions.json",
    "tasks.json": "extensions.json, settings.json",
    "container-compose.yaml": "container-bake.hcl",
    "LICENSE": "CONTRIBUTOR_LICENSE_AGREEMENT.md, GOVERNANCE.md, TRADEMARKS.md",
    "*.svg": "*.png",
    "makefile": "package*.json, tiltfile, container-compose.yaml, .env*, stop.sh",
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .gitignore, .editorconfig, .markdownlint.json, .node-version, tsconfig.json"
  },
  "files.associations": {
    "containerfile": "dockerfile",
    ".env*": "dotenv",
    "Tiltfile": "starlark",
    "*.tilt": "starlark"
  },
  "files.exclude": {
    ".git": true,
    "dist": true,
    "node_modules": true
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.enable": {
    "*": true,
    "dotenv": false
  },
  "markdownlint.config": {
    "MD030": { "ul_single": 1, "ol_single": 1, "ul_multi": 1, "ol_multi": 1 }
  },
  "prettier.printWidth": 100,
  "prettier.proseWrap": "always",
  "prettier.tabWidth": 2,
  "python.analysis.exclude": ["**/node_modules", "**/dist", "**/.venv", "**/.env*"],
  "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools"
}
