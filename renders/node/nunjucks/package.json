{
  "name": "rendini-renders-nunjucks",
  "version": "0.1.0",
  "main": "dist/server.js",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc && npm run copy-static",
    "copy-static": "copyfiles -u 1 \"graphiql/**/*\" dist/graphiql",
    "start": "node dist/server.js",
    "dev": "tsc && cross-env PORT=3001 nodemon dist/server.js",
    "watch": "tsc -w"
  },
  "dependencies": {
    "express": "^4.18.2",
    "graphiql": "^3.1.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/nunjucks": "^3.2.6",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
